<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">
    <span class="glyphicon glyphicon-remove gs-mr-2" aria-hidden="true"></span>
    <span class="sr-only">{{ 'label.close'|trans }}</span>
  </button>
  <h3 class="modal-title gs-h3">{{ data|date('d/m/Y') }}</h3>
  <h4 class="modal-title gs-h4"><em>Colloqui confermati</em></h4>
</div>
<div class="modal-body">
{% for c in dati.colloqui %}
  <div class="alert alert-info gs-mt-0 gs-mb-2 gs-pt-2 gs-pb-2 gs-pr-2 gs-pl-2" role="alert">
    <strong class="gs-text-normal gs-big">Classe {{ c.anno }}Âª {{ c.sezione }}{{ c.gruppo ? ('-'~c.gruppo) }} - Alunn{{ c.sesso == 'M' ? 'o' : 'a' }} {{ c.cognome }} {{ c.nome }} ({{ c.dataNascita|date('d/m/Y') }}) </strong><br>
    <strong class="gs-text-normal">Appuntamento alle ore {{ c.appuntamento|date('G:i') }}</strong><br>
    <strong class="gs-text-normal">{{ ('label.tipo_colloquio_'~c.tipo)|trans }}: {{ c.luogo }}</strong>
  {% if c.messaggio is not empty %}
    <br><span class="gs-text-normal">Messaggio ai genitori: <em>{{ c.messaggio }}</em></span>
  {% endif %}
  </div>
{% endfor %}
</div>
